public class JsonParser {

	public static String parseIatResult(String json) {
		StringBuffer ret = new StringBuffer();
		try {
			JSONTokener tokener = new JSONTokener(json);
			JSONObject joResult = new JSONObject(tokener);

			JSONArray words = joResult.getJSONArray("ws");
			for (int i = 0; i < words.length(); i++) {
				// è½¬å†™ç»“æœè¯ï¼Œé»˜è®¤ä½¿ç”¨ç¬¬ä¸€ä¸ªç»“æ?
				JSONArray items = words.getJSONObject(i).getJSONArray("cw");
				JSONObject obj = items.getJSONObject(0);
				ret.append(obj.getString("w"));
//				å¦‚æœéœ?è¦å¤šå€™é?‰ç»“æœï¼Œè§£ææ•°ç»„å…¶ä»–å­—æ®µ
//				for(int j = 0; j < items.length(); j++)
//				{
//					JSONObject obj = items.getJSONObject(j);
//					ret.append(obj.getString("w"));
//				}
			}
		} catch (Exception e) {
			e.printStackTrace();
		} 
		return ret.toString();
	}
	
	public static String parseGrammarResult(String json, String engType) {
		StringBuffer ret = new StringBuffer();
		try {
			JSONTokener tokener = new JSONTokener(json);
			JSONObject joResult = new JSONObject(tokener);

			JSONArray words = joResult.getJSONArray("ws");
			// äº‘ç«¯å’Œæœ¬åœ°ç»“æœåˆ†æƒ…å†µè§£æ
			if ("cloud".equals(engType)) {
				for (int i = 0; i < words.length(); i++) {
					JSONArray items = words.getJSONObject(i).getJSONArray("cw");
					for(int j = 0; j < items.length(); j++)
					{
						JSONObject obj = items.getJSONObject(j);
						if(obj.getString("w").contains("nomatch"))
						{
							ret.append("æ²¡æœ‰åŒ¹é…ç»“æœ.");
							return ret.toString();
						}
						ret.append("ã€ç»“æœã??" + obj.getString("w"));
						ret.append("ã€ç½®ä¿¡åº¦ã€?" + obj.getInt("sc"));
						ret.append("\n");
					}
				}
			} else if ("local".equals(engType)) {
				ret.append("ã€ç»“æœã??");
				for (int i = 0; i < words.length(); i++) {
					JSONObject wsItem = words.getJSONObject(i);
					JSONArray items = wsItem.getJSONArray("cw");
					if ("<contact>".equals(wsItem.getString("slot"))) {
						// å¯èƒ½ä¼šæœ‰å¤šä¸ªè”ç³»äººä¾›é€‰æ‹©ï¼Œç”¨ä¸­æ‹¬å·æ‹¬èµ·æ¥ï¼Œè¿™äº›å?™é?‰é¡¹å…·æœ‰ç›¸åŒçš„ç½®ä¿¡åº¦
						ret.append("ã€?");
						for(int j = 0; j < items.length(); j++)
						{
							JSONObject obj = items.getJSONObject(j);
							if(obj.getString("w").contains("nomatch"))
							{
								ret.append("æ²¡æœ‰åŒ¹é…ç»“æœ.");
								return ret.toString();
							}
							ret.append(obj.getString("w")).append("|");						
						}
						ret.setCharAt(ret.length() - 1, 'ã€?');
					} else {
						//æœ¬åœ°å¤šå?™é?‰æŒ‰ç…§ç½®ä¿¡åº¦é«˜ä½æ’åºï¼Œä¸€èˆ¬é?‰å–ç¬¬ä¸€ä¸ªç»“æœå³å?
						JSONObject obj = items.getJSONObject(0);
						if(obj.getString("w").contains("nomatch"))
						{
							ret.append("æ²¡æœ‰åŒ¹é…ç»“æœ.");
							return ret.toString();
						}
						ret.append(obj.getString("w"));						
					}
				}
				ret.append("ã€ç½®ä¿¡åº¦ã€?" + joResult.getInt("sc"));
				ret.append("\n");
			}
			
		} catch (Exception e) {
			e.printStackTrace();
			ret.append("æ²¡æœ‰åŒ¹é…ç»“æœ.");
		} 
		return ret.toString();
	}
	
	public static String parseGrammarResult(String json) {
		StringBuffer ret = new StringBuffer();
		try {
			JSONTokener tokener = new JSONTokener(json);
			JSONObject joResult = new JSONObject(tokener);

			JSONArray words = joResult.getJSONArray("ws");
			for (int i = 0; i < words.length(); i++) {
				JSONArray items = words.getJSONObject(i).getJSONArray("cw");
				for(int j = 0; j < items.length(); j++)
				{
					JSONObject obj = items.getJSONObject(j);
					if(obj.getString("w").contains("nomatch"))
					{
						ret.append("æ²¡æœ‰åŒ¹é…ç»“æœ.");
						return ret.toString();
					}
					ret.append("ã€ç»“æœã??" + obj.getString("w"));
					ret.append("ã€ç½®ä¿¡åº¦ã€?" + obj.getInt("sc"));
					ret.append("\n");
				}
			}
		} catch (Exception e) {
			e.printStackTrace();
			ret.append("æ²¡æœ‰åŒ¹é…ç»“æœ.");
		} 
		return ret.toString();
	}
	

	public static String parseGrammarResultFirst(String json) {
		String ret = "";
		int scMax = 0;
		try {
			JSONTokener tokener = new JSONTokener(json);
			JSONObject joResult = new JSONObject(tokener);

			JSONArray words = joResult.getJSONArray("ws");
			for (int i = 0; i < words.length(); i++) {
				JSONArray items = words.getJSONObject(i).getJSONArray("cw");
				for(int j = 0; j < items.length(); j++)
				{
					JSONObject obj = items.getJSONObject(j);
					if(obj.getString("w").contains("nomatch"))
					{
						ret = "æ²¡æœ‰åŒ¹é…ç»“æœ.";
						return ret;
					}
					if (obj.getInt("sc") > scMax) {
						scMax = obj.getInt("sc");
						ret = obj.getString("w");
					}
				}
			}
		} catch (Exception e) {
			e.printStackTrace();
			ret = "æ²¡æœ‰åŒ¹é…ç»“æœ.";
		} 
		return ret;
	}
	
	public static String parseGrammarResultSum(String json) {
		String ret = "";
		int scMax = 0;
		try {
			JSONTokener tokener = new JSONTokener(json);
			JSONObject joResult = new JSONObject(tokener);

			JSONArray words = joResult.getJSONArray("ws");
			for (int i = 0; i < words.length(); i++) {
				JSONArray items = words.getJSONObject(i).getJSONArray("cw");
				for(int j = 0; j < items.length(); j++)
				{
					JSONObject obj = items.getJSONObject(j);
					if(obj.getString("w").contains("nomatch"))
					{
						ret = "æ²¡æœ‰åŒ¹é…ç»“æœ.";
						return ret;
					}
					//scMax = obj.getInt("sc");
					ret += obj.getString("w");
				}
			}
		} catch (Exception e) {
			e.printStackTrace();
			ret = "æ²¡æœ‰åŒ¹é…ç»“æœ.";
		} 
		return ret;
	}
}
