package com.lishimin.robotcontroller;

import java.net.Socket;

public class UDPSendMsg {
	private static Socket udpSocket = null;
	private static UDPSendMsg sMe = null;
	
	public UDPSendMsg getInstance() {
		if (sMe == null) {
			sMe = new UDPSendMsg();
		}
		return sMe;
	}
	
	public UDPSendMsg () {
		if (udpSocket == null) {
			udpSocket = new Socket("192.168.4.1", 5003);
					
		}
	}
			
}
