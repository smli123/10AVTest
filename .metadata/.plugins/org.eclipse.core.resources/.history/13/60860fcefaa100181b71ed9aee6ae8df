package com.lishimin.robotcontroller;

import java.io.IOException;
import java.net.Socket;
import java.net.UnknownHostException;

public class UDPSendMsg {
	private static Socket udpSocket = null;
	private static UDPSendMsg sMe = null;
	
	public UDPSendMsg getInstance() {
		if (sMe == null) {
			sMe = new UDPSendMsg();
		}
		return sMe;
	}
	
	public boolean createSocket () {
		if (udpSocket == null) {
			try {
				udpSocket = new Socket("192.168.4.1", 5003);
				return true;
			} catch (UnknownHostException e) {
				e.printStackTrace();
				return false;
			} catch (IOException e) {
				e.printStackTrace();
				return false;
			}
		}
	}
			
}
